<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">
	<skipIfNotSupported/>
	<programGroup defaultName="BORG"/>
	<shortcut name="BORG" target="java" commandLine="-Xmx128m -XX:MinHeapFreeRatio=10 -XX:MaxHeapFreeRatio=20 -Xms24m -jar borg.jar"
		workingDirectory="$INSTALL_PATH" description="BORG Calendar"
		initialState="normal" programGroup="yes" desktop="no" applications="no"
		startMenu="no" startup="no" encoding="UTF-8" type="Application"/>
	<shortcut name="Uninstall" target="java" commandLine="-jar $INSTALL_PATH/Uninstaller/uninstaller.jar"
		workingDirectory="$INSTALL_PATH/Uninstaller" description=""
		initialState="normal" programGroup="yes" desktop="no" applications="no"
		startMenu="no" startup="no" encoding="UTF-8" type="Application">
	</shortcut>
</izpack:shortcuts>

